<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--TextInputLayout in SignIn and SignUp-->
    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/rus_dark_blue</item> <!--Цвет рамки label при вводе-->
        <item name="hintTextColor">@color/rus_dark_blue</item> <!--Цвет текта label при вводе-->
        <item name="android:textColorHint">@color/rus_dark_blue</item> <!--Цвет текста в label при просмотре-->
        <item name="boxCornerRadiusBottomEnd">16dp</item> <!--Размер сгруглений-->
        <item name="boxCornerRadiusTopStart">16dp</item>
        <item name="boxCornerRadiusBottomStart">16dp</item>
        <item name="boxCornerRadiusTopEnd">16dp</item>
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_height">75dp</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
    </style>

    <!--TextInputEditText in SignIn and SignUp-->
    <style name="TextInputEditTextStyleSign" parent="">
        <item name="android:textColor">@color/rus_dark_blue</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!--CardView Style in Fragment List Order-->
    <style name="ShapeAppearanceOverlay.MaterialCardView.Cut.Fragment" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">30dp</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeBottomRight">30dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <!--CardView Style in Fragment Contacts-->
    <style name="ShapeAppearanceOverlay.MaterialCardView.Cut.Fragment.Contacts" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeTopLeft">30dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">30dp</item>
    </style>

    <!--Button Gradient Styles-->
    <style name="AppCompatButtonStyle" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:textColor">@color/rus_white</item>
        <item name="android:background">@drawable/shape_button</item>
    </style>

    <style name="Theme.BottomNavigationView.ActiveIndicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@android:color/transparent</item>
    </style>
</resources>